{
    "name": "nyoomy",
    "version": "0.1.0",
    "private": true,
    "description": "",
    "homepage": "https://github.com/jhd-dev/nyoomy#readme",
    "bugs": {
        "url": "https://github.com/jhd-dev/nyoomy/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jhd-dev/nyoomy.git",
        "directory": "."
    },
    "author": {
        "name": "Jonathan Doliver",
        "email": "doliver.j@northeastern.edu",
        "url": "https://github.com/jhd-dev/"
    },
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "setup": "yarn check-versions && yarn install",
        "start": "yarn run watch",
        "build": "yarn run clean && lerna run build",
        "build:ts": "tsc -b tsconfig-composite.json",
        "watch": "concurrently --names \"CLIENT,SERVER\" \"yarn workspace web watch\" \"yarn workspace server watch\"",
        "test": "lerna run test",
        "lint": "yarn lint:eslint && yarn lint:style && yarn lint:markdown && yarn lint:format",
        "lint:eslint": "eslint \"**/*.{js,jsx,ts,tsx}\" --cache --fix --color",
        "lint:markdown": "markdownlint --fix --config .markdownlintrc --ignore-path .markdownlintignore ./",
        "lint:style": "stylelint \"**/*.scss\" && stylelint \"**/*.css\"",
        "lint:format": "prettier -lw --config .prettierrc.json --ignore-path .prettierignore .",
        "check": "yarn check:yarn && yarn check:types && yarn check:spelling",
        "check:yarn": "yarn constraints",
        "check:types": "tsc",
        "check:spelling": "cspell \"packages/**/*.*\" --config ./cSpell.json",
        "clean": "./scripts/clean.ts -vm && yarn cache clean && yarn install && yarn lint:format",
        "clean:fast": "./scripts/clean.ts",
        "diff": "lerna diff",
        "check-versions": "./scripts/check-node-version.ts"
    },
    "devDependencies": {
        "@nyoomy/eslint-config": "workspace:*",
        "@nyoomy/prettier-config": "workspace:*",
        "@nyoomy/stylelint-config": "workspace:*",
        "@types/eslint": "^7",
        "@types/jest": "^26.0.23",
        "@types/node": "^14.14.41",
        "@types/rimraf": "^3.0.0",
        "@types/yargs": "^16",
        "concurrently": "^6.0.2",
        "cspell": "^5.2.4",
        "eslint": "^7.25.0",
        "eslint-define-config": "^1.0.8",
        "graphql": "^15.5.0",
        "husky": "^6.0.0",
        "jest": "^26.6.3",
        "jest-transform-stub": "^2.0.0",
        "lerna": "^4.0.0",
        "lint-staged": "^10.5.4",
        "markdownlint": "^0.23.1",
        "markdownlint-cli": "^0.27.1",
        "please-upgrade-node": "^3.2.0",
        "prettier": "^2.2.1",
        "rimraf": "^3.0.2",
        "stylelint": "^13.12.0",
        "ts-jest": "^26.5.5",
        "ts-node": "^9.1.1",
        "typescript": "^4.2.4",
        "yargs": "^16.2.0"
    },
    "engines": {
        "node": ">=14.16.1",
        "yarn": ">=2.4.1"
    }
}
