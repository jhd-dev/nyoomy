{
    "name": "nyoomy",
    "version": "0.1.0",
    "private": true,
    "description": "A cross-platform self-improvement app with flexible and gamified productivity and health-tracking features.",
    "keywords": [],
    "homepage": "https://github.com/jhd-dev/nyoomy#readme",
    "bugs": {
        "url": "https://github.com/jhd-dev/nyoomy/issues",
        "email": "doliver.j@northeastern.edu"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jhd-dev/nyoomy.git"
    },
    "license": "GPL-3.0",
    "author": {
        "name": "Jonathan Doliver",
        "email": "doliver.j@northeastern.edu",
        "url": "https://github.com/jhd-dev/"
    },
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "setup": "yarn install && yarn link -Apr . && yarn workspace @nyoomy/eslint-config build",
        "start": "concurrently --names \"CLIENT,SERVER\" \"yarn workspace @nyoomy/web start\" \"yarn workspace @nyoomy/server start\"",
        "watch": "concurrently --names \"CLIENT,SERVER\" \"yarn workspace @nyoomy/web watch\" \"yarn workspace @nyoomy/server watch\"",
        "watch:server": "yarn workspace @nyoomy/server watch",
        "watch:web": "yarn workspace @nyoomy/web start",
        "build:ts": "tsc -b tsconfig-composite.json",
        "lint": "yarn lint:eslint && yarn lint:style && yarn lint:markdown && yarn lint:format",
        "lint:eslint": "eslint \"**/*.{js,jsx,ts,tsx,html,json,yml}\" --cache --fix --color",
        "lint:markdown": "markdownlint --fix --config .markdownlintrc.jsonc --ignore-path .markdownlintignore ./",
        "lint:style": "stylelint \"**/*.scss\" && stylelint \"**/*.css\"",
        "lint:format": "prettier -lw --config .prettierrc.json --ignore-path .prettierignore .",
        "check": "yarn check:deps && yarn check:types && yarn check:spelling",
        "check:deps": "yarn up && yarn constraints",
        "check:types": "tsc",
        "check:spelling": "cspell \"packages/**/*.*\" --config ./cSpell.json",
        "clean": "./scripts/clean.ts -vm",
        "clean:fast": "./scripts/clean.ts"
    },
    "resolutions": {
        "@nyoomy/api": "portal:packages/api",
        "@nyoomy/cli": "portal:packages/cli",
        "@nyoomy/client": "portal:packages/client",
        "@nyoomy/common": "portal:packages/common",
        "@nyoomy/eslint-config": "portal:packages/eslint-config",
        "@nyoomy/extension": "portal:packages/extension",
        "@nyoomy/global": "portal:packages/global",
        "@nyoomy/graphql": "portal:packages/graphql",
        "@nyoomy/prettier-config": "portal:packages/prettier-config",
        "@nyoomy/server": "portal:packages/server",
        "@nyoomy/stylelint-config": "portal:packages/stylelint-config",
        "@nyoomy/web": "portal:packages/web",
        "nyoomy": "portal:",
        "url-parse@npm:1.5.1": "1.5.8"
    },
    "devDependencies": {
        "@nyoomy/eslint-config": "workspace:*",
        "@nyoomy/prettier-config": "workspace:*",
        "@nyoomy/stylelint-config": "workspace:*",
        "@types/eslint": "^8.4.2",
        "@types/jest": "^27.5.1",
        "@types/node": "^17.0.35",
        "@types/rimraf": "^3.0.2",
        "@types/yargs": "^17.0.10",
        "concurrently": "^7.2.1",
        "cspell": "^5.2.4",
        "eslint": "^7.25.0",
        "graphql": "^15.8.0",
        "husky": "^6.0.0",
        "jest": "^27.0.0",
        "jest-transform-stub": "^2.0.0",
        "lint-staged": "^10.5.4",
        "markdownlint": "^0.25.1",
        "markdownlint-cli": "^0.31.1",
        "prettier": "^2.2.1",
        "rimraf": "^3.0.2",
        "stylelint": "^13.12.0",
        "ts-jest": "^27.1.2",
        "ts-node": "^10.8.2",
        "typescript": "~4.2.4",
        "yargs": "^17.3.1"
    },
    "engines": {
        "node": ">=14.16.1",
        "yarn": ">=2.4.1"
    }
}
