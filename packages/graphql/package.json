{
    "name": "@nyoomy/graphql",
    "version": "0.1.0",
    "private": true,
    "description": "GraphQL operations for use by clients.",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jhd-dev/nyoomy.git",
        "directory": "packages/graphql"
    },
    "main": "lib/index.js",
    "module": "src/index.ts",
    "typings": "lib/index.d.ts",
    "scripts": {
        "build": "yarn generate && yarn build:ts",
        "build:ts": "tsc -p tsconfig.json",
        "watch": "concurrently -n \"gql,tsc\" \"yarn generate:watch\" \"yarn watch:ts\"",
        "watch:ts": "tsc -w -p tsconfig.json",
        "generate": "graphql-codegen --config ./codegen.yml",
        "generate:watch": "graphql-codegen --config --watch ./codegen.yml"
    },
    "dependencies": {
        "@apollo/client": "^3.5.7"
    },
    "devDependencies": {
        "@graphql-codegen/add": "^3.1.1",
        "@graphql-codegen/cli": "^2.3.1",
        "@graphql-codegen/jsdoc": "^2.2.2",
        "@graphql-codegen/typed-document-node": "^2.2.2",
        "@graphql-codegen/typescript": "^2.4.2",
        "@graphql-codegen/typescript-operations": "^2.2.2",
        "@graphql-codegen/typescript-react-apollo": "^3.2.4",
        "@graphql-codegen/typescript-resolvers": "^2.4.3",
        "@graphql-codegen/typescript-type-graphql": "^2.2.3",
        "concurrently": "^7.0.0",
        "graphql-tag": "^2.12.6"
    },
    "peerDependencies": {
        "graphql": "^15.8.0",
        "prettier": "^2.2.1",
        "typescript": "~4.2.4"
    }
}
