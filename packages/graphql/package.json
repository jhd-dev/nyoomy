{
    "name": "@nyoomy/graphql",
    "version": "0.1.0",
    "private": true,
    "description": "GraphQL operations for use by clients.",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jhd-dev/nyoomy.git",
        "directory": "packages/graphql"
    },
    "main": "src/index.ts",
    "scripts": {
        "build": "tsc -b tsconfig.json",
        "build:watch": "tsc -b --watch",
        "watch": "concurrently --names \"GQL,TS\" \"yarn generate:watch\" \"yarn build:watch\"",
        "generate": "graphql-codegen --config ./codegen.yml",
        "generate:watch": "graphql-codegen --config --watch ./codegen.yml"
    },
    "devDependencies": {
        "@graphql-codegen/add": "^2.0.2",
        "@graphql-codegen/cli": "^1.21.4",
        "@graphql-codegen/jsdoc": "^1.17.9",
        "@graphql-codegen/typed-document-node": "^1.18.5",
        "@graphql-codegen/typescript": "^1.22.0",
        "@graphql-codegen/typescript-operations": "^1.17.16",
        "@graphql-codegen/typescript-react-apollo": "2.2.3",
        "@graphql-codegen/typescript-resolvers": "^1.19.1",
        "@graphql-codegen/typescript-type-graphql": "^1.18.4",
        "@types/concurrently": "^6.0.1",
        "concurrently": "^6.0.2"
    },
    "peerDependencies": {
        "graphql": "^15.5.0",
        "prettier": "^2.2.1",
        "typescript": "^4.2.4"
    }
}
